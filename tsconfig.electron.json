{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist-electron",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/main/**/*", "src/electron/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "src/renderer"]
}
