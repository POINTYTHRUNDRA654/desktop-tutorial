{
  "name": "mossy-desktop",
  "private": true,
  "version": "4.0.0",
  "description": "Mossy v4.0 - Production-ready Fallout 4 modding assistant with AI, file analysis, asset optimization, and tool integration",
  "main": "dist-electron/electron/main.js",
  "author": "POINTYTHRUNDRA654",
  "license": "MIT",
  "scripts": {
    "dev:killports": "node scripts/kill-ports.mjs 5174 5173 21337",
    "dev:clean": "npm run dev:killports && npm run dev",
    "dev": "node scripts/dev.mjs",
    "dev:concurrently": "concurrently \"npm run dev:vite\" \"npm run dev:tsc\" \"npm run dev:electron\"",
    "dev:vite": "vite --strictPort",
    "dev:tsc": "tsc -p tsconfig.electron.json -w",
    "dev:electron": "node -e \"const waitOn=require('wait-on'); const port=Number(process.env.VITE_DEV_SERVER_PORT||5174); const url='http://127.0.0.1:'+port; console.log('[dev:electron] Waiting on', url); waitOn({ resources:[url], delay:1000, interval:250, timeout:60000 }).then(()=>{ const { spawn }=require('child_process'); const env={...process.env, ELECTRON_START_URL:url}; const child=spawn('electron',['.'],{ stdio:'inherit', env, shell:true }); child.on('exit',(code)=>process.exit(code||0)); }).catch((e)=>{ console.error('[dev:electron] wait-on failed:', e?.message||e); process.exit(1); });\"",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "prebuild:vite": "node scripts/copy-knowledge.mjs",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke": "npm run lint && npm test",
    "verify": "npm run smoke && npm run build"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@upstash/workflow-agents": "^0.1.4",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.5",
    "groq-sdk": "^0.37.0",
    "lowdb": "^7.0.1",
    "lucide-react": "^0.400.0",
    "openai": "^6.16.0",
    "pdf-parse": "^2.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.21.3",
    "recharts": "^2.10.4",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "tailwindcss": "^4.1.18",
    "typescript": "5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.volttech.desktop",
    "productName": "Mossy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "external/volttech-dist/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "external/volttech-dist",
        "to": "external/volttech-dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mossy"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
